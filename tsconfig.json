{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
